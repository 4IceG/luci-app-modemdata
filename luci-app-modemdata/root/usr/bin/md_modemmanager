. /lib/functions.sh
. /usr/share/libubox/jshn.sh

ECM=""

RES="/usr/share/modemdata"

device=$1
network=$2
forced_plmn=$3

SEPARATOR=""
parse_section() {
		echo "["
			$RES/product_modemmanager.sh "$device"
			echo ","
			$RES/network.sh "$network"
			echo ","
			$RES/params_modemmanager.sh "$device" "$forced_plmn"
		echo "]"
}

config_load modemdata
parse_section modemdata

exit 0
